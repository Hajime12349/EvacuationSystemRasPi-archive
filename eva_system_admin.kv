
#:kivy 1.11.1


<ColorLabel>:
    canvas.before:
        Color:
            rgba: 1 , 0.75 , 0.38 , 1 #ffbf60
        Rectangle:
            pos: self.pos
            size: self.size

<RoundedButton@Button>
    background_color:(0,0,0,0)
    background_normal:''
    color: 0 , 0 , 0 , 1

    #最低限のフォントサイズ18pt=5.4mm, window_size(px)=display_size(mm)*5
    font_size: 5.4*5

    text_size: self.width, None
    halign: 'center'
    canvas.before:
        Color:
            #if down #ffbf60 else #997238
            rgba:(1 , 0.75 , 0.38 , 1) if self.state!='down' else (0.6 , 0.45 , 0.22,1)
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[18]


<SpinnerOption@Button>
    background_normal:''
    background_down:''
    background_color: (0.9,0.9,0.9, 1) if self.state!='down' else (0.5,0.5,0.5, 1)
    color:0,0,0,1
    font_size: 5.4*5
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1

<CustomSpinner@Spinner>
    size_hint_y:0.05
    background_normal:''
    background_down:''
    color: 0 , 0 , 0 , 1
    font_size: 5.4*5
    background_color: (1.0,0.925,0.8, 1) if self.state!='down' else (0.5,0.5,0.5, 1)
    on_press:root.on_press_spinner()
    #min_state_time:1

<CustomTextInput@TextInput>
    size_hint_y:0.05
    background_normal:''
    color: 0 , 0 , 0 , 1
    font_size: 5.4*5
    background_color:(1.0,0.925,0.8, 1)
    cursor_color:(0,0,0, 1)
    multiline:False
    halign:'center'
    padding_y: [self.height / 2.0 - (self.line_height / 2.0)]


<GridRectangle@GridLayout>
    raws:10
    cols:1
    Button:
        background_normal:''
        background_down:''
        color: 0 , 0 , 0 , 1
        text:"Click here and you'll see a preview"
        #if down #cccccc else #7f7f7f
        background_color:(0.8, 0.8 , 0.8 , 1) if self.state!='down' else (0.5,0.5,0.5, 1)
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 0, 0, 0, 1
            Line:
                rectangle: self.x+1,self.y+1,self.width-1,self.height-1

#スタート画面（メニュー）
<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        ColorLabel:
            size_hint_y: 0.05

        FloatLayout:
            RoundedButton:
                text:"通報"
                size_hint: 0.3,0.24
                pos_hint:{'center_x':0.25, 'center_y':0.75}
                on_release:root.manager.current = 'input'

            RoundedButton:
                text:"履歴"
                size_hint: 0.3,0.24
                pos_hint:{'center_x':0.25, 'center_y':0.25}
                on_release: root.manager.current = 'history'

#通報入力画面
<InputScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        ColorLabel:
            size_hint_y: 0.05

        BoxLayout:
            orientation:'horizontal'
            BoxLayout:
                orientation:'vertical'
                padding: ('0dp', '10dp', '0dp', '20dp')
                spacing: '30dp'
                BoxLayout:
                    orientation:'vertical'
                    padding:10,0,10,0
                    Label:
                        text:'災害発生日時'
                        color:(0,0,0,1)
                        size_hint_y:0.05
                        font_size: 5.4*5
                    BoxLayout:
                        orientation:'horizontal'
                        spacing: '20dp'
                        size_hint_y: 0.05
                        CustomTextInput:
                            id:date
                            size_hint_y:1
                            text:''
                        CustomTextInput:
                            id:time
                            size_hint_y:1
                            text:''
                    # CustomSpinner:
                    #     id:date_time
                    #     pos_hint: {'y': 0.25}
                    #     text: 'A'
                    #     values: 'A', 'B', 'C', 'D', 'E'
                BoxLayout:
                    orientation:'vertical'
                    padding:10,0,10,0
                    Label:
                        text:'災害の種類'
                        color:(0,0,0,1)
                        size_hint_y:0.05
                        font_size: 5.4*5
                    CustomSpinner:
                        id:type
                        pos_hint: {'y': 0.5}
                        text: '大雨'
                        values: '大雨','土砂災害','高潮','洪水','地震','津波','暴風・強風','波浪','雷'
                BoxLayout:
                    orientation:'vertical'
                    padding:10,0,10,0
                    Label:
                        text:'災害のレベル'
                        color:(0,0,0,1)
                        size_hint_y:0.05
                        font_size: 5.4*5
                    CustomSpinner:
                        id:level
                        pos_hint: {'y': 0.5}
                        text: '早期注意情報'
                        values:'危険なし','早期注意情報','警戒レベル2','警戒レベル3','警戒レベル4','警戒レベル5'
                BoxLayout:
                    orientation:'vertical'
                    padding:10,0,10,0
                    Label:
                        text:'対象地域'
                        color:(0,0,0,1)
                        size_hint_y:0.05
                        font_size: 5.4*5
                    CustomSpinner:
                        id:area
                        pos_hint: {'y': 0.75}
                        text: '大島地区'
                        values: '大島地区','久賀地区','東和地区','橘地区','大島','久賀','東和','橘'
                BoxLayout:
                    orientation:'vertical'
                    padding:10,0,10,0
                    Label:
                        text:'備考'
                        color:(0,0,0,1)
                        size_hint_y:0.05
                        font_size: 5.4*5
                    CustomTextInput:
                        id:rmarks
                        text:'追加情報はありません。'
                    # CustomSpinner:
                    #     id:rmarks
                    #     pos_hint: {'y': 1}
                    #     text: 'A'
                    #     values: 'A', 'B', 'C', 'D', 'E'

            BoxLayout:
                BoxLayout:
                    padding:10,10,10,10
                    Label:
                        canvas.before:
                            Color:
                                rgba: 0.8, 0.8 , 0.8 , 1 #cccccc
                            Rectangle:
                                pos: self.pos
                                size: self.size

        FloatLayout:
            size_hint_y:0.1
            RoundedButton:
                text:"戻る"
                size_hint: 0.1,0.8
                pos_hint:{'center_x':0.1, 'center_y':0.5}

                #override
                canvas.before:
                    RoundedRectangle:
                        size:self.size
                        pos:self.pos
                        radius:[10]

                on_release:root.manager.current = 'menu'

            RoundedButton:
                text:"確認"
                size_hint: 0.1,0.8
                pos_hint:{'center_x':0.9, 'center_y':0.5}

                #override
                canvas.before:
                    RoundedRectangle:
                        size:self.size
                        pos:self.pos
                        radius:[10]

                on_release:
                    root.on_press_confirm()
                    root.manager.current = 'check'


