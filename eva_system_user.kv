
#:kivy 1.11.1


<ColorLabel>:
    canvas.before:
        Color:
            rgba: 1 , 0.75 , 0.38 , 1
        Rectangle:
            pos: self.pos
            size: self.size

<RoundedButton@Button>
    background_color:(0,0,0,0)
    background_normal:''
    color: 0 , 0 , 0 , 1

    #最低限のフォントサイズ18pt=5.4mm, window_size(px)=display_size(mm)*5
    font_size: 5.4*5

    text_size: self.width, None
    halign: 'center'
    canvas.before:
        Color:
            rgba:(1 , 0.75 , 0.38 , 1) if self.state!='down' else (0.6 , 0.45 , 0.22,1)
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[18]


<SpinnerOption>
    background_normal:''
    background_color: (230/250 , 230/250 , 230/250 , 1)
    color:0,0,0,1
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1

<CustomSpinner@Spinner>
    size_hint_y:0.05
    background_normal:''
    color: 0 , 0 , 0 , 1
    background_color:(180/250 , 180/250 , 180/250 , 1)

<GridRectangle@GridLayout>
    raws:10
    cols:1
    Button:
        background_normal:''
        background_down:''
        color: 0 , 0 , 0 , 1
        text:"Click here and you'll see a preview"
        #if down #cccccc else #7f7f7f
        background_color:(0.8, 0.8 , 0.8 , 1) if self.state!='down' else (0.5,0.5,0.5, 1)
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 0, 0, 0, 1
            Line:
                rectangle: self.x+1,self.y+1,self.width-1,self.height-1


#ユーザ画面（メニュー）
<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size
        
        ColorLabel:
            size_hint_y: 0.15
        
        BoxLayout:
            orientation: 'vertical'
            size: root.size
            padding:40,0,40,0
            size_hint_y: 2.5
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                
            Label:
                id: title
                text:'タイトル'
                font_size: 5.4*5 
                size_hint_y: 0.3
                color:(0,0,0,1)
            
            BoxLayout:
                orientation:'vertical'
                size_hint_y: 1
                padding: 10,10,10,10
                canvas.before:
                    Color:
                        rgba: 0,0,0,0.15
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    id: content
                    text_size: self.size
                    text:'内容'
                    halign: 'left'
                    valign: 'top'
                    font_size: 5.4*4
                    size_hint_y: 1
                    color:(0,0,0,1)
            
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.5
            padding: 0,10,0,0
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            FloatLayout:
                RoundedButton:
                    text:"履歴"
                    size_hint: 0.2,0.7
                    pos_hint:{'center_x':0.7, 'center_y':0.5}
                    on_press: root.manager.current = 'userHistory'
                RoundedButton:
                    text:"受信する"
                    size_hint: 0.2,0.7
                    pos_hint:{'center_x':0.3, 'center_y':0.5}
                    on_press: root.on_press_recvData()

#ユーザ履歴画面
<UserHistoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        ColorLabel:
            size_hint_y: 0.05

        BoxLayout:
            orientation:'horizontal'
            BoxLayout:
                padding:10,10,10,10
                GridLayout:
                    raws:10
                    cols:1
                    GridRectangle:
                        id:G1
                    GridRectangle:
                        id:G2
                    GridRectangle:
                        id:G3
                    GridRectangle:
                        id:G4
                    GridRectangle:
                        id:G5
                    GridRectangle:
                        id:G6
                    GridRectangle:
                        id:G7
                    GridRectangle:
                        id:G8
                    GridRectangle:
                        id:G9
                    GridRectangle:
                        id:G10
            BoxLayout:
                padding:10,10,10,10
                Label:
                    canvas.before:
                        Color:
                            rgba: 0.8, 0.8 , 0.8 , 1 #cccccc
                        Rectangle:
                            pos: self.pos
                            size: self.size

        FloatLayout:
            size_hint_y:0.1
            RoundedButton:
                text:"戻る"
                size_hint: 0.1,0.8
                pos_hint:{'center_x':0.1, 'center_y':0.5}

                #override
                canvas.before:
                    RoundedRectangle:
                        size:self.size
                        pos:self.pos
                        radius:[10]

                on_release:root.manager.current = 'menu'